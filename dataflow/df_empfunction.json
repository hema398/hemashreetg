{
	"name": "df_empfunction",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_empfun_input",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "empfunction_output",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "window1"
				},
				{
					"name": "rank1"
				},
				{
					"name": "rank2"
				}
			],
			"scriptLines": [
				"source(output(",
				"          {Emp ID} as string,",
				"          {Emp Name} as string,",
				"          {Emp DOJ} as string,",
				"          {Emp Dep} as string,",
				"          {Emp salary} as integer,",
				"          Gender as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 window(over({Emp salary}),",
				"     asc({Emp Dep}, true),",
				"     {Total Salary} = sum({Emp salary}),",
				"          MIN = min({Emp salary}),",
				"          count = count({Emp salary}),",
				"          Rownumber = rowNumber()) ~> window1",
				"rank2 rank(asc({Emp Dep}, true),",
				"     output(Rank as long)) ~> rank1",
				"window1 rank(asc({Emp Dep}, true),",
				"     output(rank1 as long),",
				"     dense: true) ~> rank2",
				"rank1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          {dept id} as string,",
				"          {Department name } as string,",
				"          DOJ as string,",
				"          addDays as string",
				"     ),",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}